@using aracKiralama.Models
@model Users
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Layout.cshtml";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" action="/Guvenlik/SignUp" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        @if (Model == null)
                                        {
                                            <input type="hidden" class="form-control" value="@Model.KullaniciID" name="KullaniciID" />
                                        }
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="KullaniciAdi" name="KullaniciAdi" value="@Model.KullaniciAdi" class="form-control" />
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="Eposta" class="form-control" name="Eposta" value="@Model.Eposta" />
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="Sifre" class="form-control" name="Sifre" value="@Model.Sifre" />
                                            <label class="form-label" for="form3Example4c">Password</label>
                                        </div>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="RolID" name="RolID" value="1">
                                        <label class="form-check-label" for="inlineCheckbox3">Admin</label>
                                    </div>


                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="RolID" name="RolID" value="2">
                                        <label class="form-check-label" for="inlineCheckbox3">Müşteri</label>
                                       
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="RolID" name="RolID" value="3">
                                        <label class="form-check-label" for="inlineCheckbox3">Şirket</label>
                                     
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary">Ekle</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
