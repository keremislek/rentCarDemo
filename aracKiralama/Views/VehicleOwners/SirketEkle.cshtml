@using aracKiralama.Models
@model VehicleOwners
@{
    ViewBag.Title = "SirketEkle";
    Layout = "~/Views/Layout.cshtml";
}

<h2>SirketEkle</h2>
<form class="mx-1 mx-md-4" action="/VehicleOwners/SirketEkle" method="post">
    <div class="d-flex flex-row align-items-center mb-4">
            <input type="hidden" class="form-control" value="@Model.SahipID" name="SahipID" />
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
        
        <input type="hidden" class="form-control" value="@Model.KullaniciID" name="KullaniciID" />
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="text" id="SahipAdi" name="SahipAdi" value="@Model.SahipAdi" class="form-control" />
            <label class="form-label" for="form3Example1c">Şirket Sahibinin Adı-Soyadı</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="text" id="SahipTelefon" class="form-control" name="SahipTelefon" value="@Model.SahipTelefon" />
            <label class="form-label" for="form3Example3c">Şirket Telefon</label>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="text" id="Sifre" class="form-control" name="SirketAdi" value="@Model.SirketAdi" />
            <label class="form-label" for="form3Example4c">Şirket Adı</label>
        </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="text" id="Sifre" class="form-control" name="SirketAdi" value="@Model.SirketAdresi" />
            <label class="form-label" for="form3Example4c">Şirket Adresi</label>
        </div>
    </div>


    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>
