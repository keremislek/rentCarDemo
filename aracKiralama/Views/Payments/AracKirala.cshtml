@using aracKiralama.Models
@model Payments

@{
    ViewBag.Title = "AracKirala";
    Layout = "~/Views/Layout.cshtml";
}



<h2>Arac Kirala</h2>



<form action="/Payments/AracKirala" method="post">
    <div class="form-row">

        <div class="form-group">
            <input type="hidden" class="form-control" value="@Model.OdemeID" id="OdemeID" name="OdemeID">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" value="@Model.KiralamaID" id="KiralamaID" name="KiralamaID">
        </div>

    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input type="date" id="OdemeTarihi" name="OdemeTarihi" value="@Model.OdemeTarihi" class="form-control" />
            <label class="form-label" for="form3Example1c">Odeme Tarihi</label>
        </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input readonly type="text" id="OdemeMiktari" name="OdemeMiktari" value="@Model.OdemeMiktari" class="form-control" />
            <label class="form-label" for="form3Example1c">Odeme Tarihi</label>
        </div>
    </div>
   
    <button type="submit" class="btn btn-primary">Ödeme</button>
</form>

